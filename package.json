{
  "name": "@nurv/runce",
  "version": "1.0.0",
  "description": "Run one-time tasks for Node.js services - like migrations, but for arbitrary TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "runce": "bin/runce"
  },
  "files": [
    "dist",
    "bin"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:run": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepack": "npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "migrations",
    "tasks",
    "typescript",
    "mongodb",
    "cli",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "mongodb": "^6.2.0",
    "tsx": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.0.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  },
  "peerDependencies": {
    "mongodb": "^5.0.0 || ^6.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
